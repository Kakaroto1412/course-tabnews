{
  "name": "course-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br para o https://curso.dev",
  "license": "MIT",
  "author": "",
  "main": "home",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "build": "next build",
    "start": "next start",
    "reset": "npm run services:stop && npm run services:up && npm run migration:up",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down -v",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env up"
  },
  "dependencies": {
    "cross-spawn": "^7.0.6",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^16.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "prettier": "^3.8.1"
  },
  "overrides": {
    "inflight": "npm:ignore",
    "glob": "^13.0.1",
    "minimatch": "^10.2.1"
  },
  "engines": {
    "node": "24.x"
  }
}
